<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignupActivity">

    <androidx.constraintlayout.utils.widget.ImageFilterButton
        android:id="@+id/imageFilterButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/air5" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="138dp"
        android:layout_height="48dp"
        android:layout_above="@+id/textView2"
        android:layout_marginEnd="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginBottom="30dp"
        android:layout_toStartOf="@+id/username"
        android:layout_toLeftOf="@+id/username"
        android:text=" UserName:"
        android:textColor="@color/black"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:layout_above="@+id/textView3"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginBottom="44dp"
        android:layout_toStartOf="@+id/password"
        android:layout_toLeftOf="@+id/password"
        android:text=" Password:"
        android:textColor="@color/black"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="211dp"
        android:layout_height="46dp"
        android:layout_above="@+id/textView4"
        android:layout_marginEnd="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginBottom="31dp"
        android:layout_toStartOf="@+id/confirmpassword"
        android:layout_toLeftOf="@+id/confirmpassword"
        android:text=" Confirm Password:"
        android:textColor="@color/black"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="158dp"
        android:layout_height="50dp"
        android:layout_above="@+id/textView5"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="31dp"
        android:layout_toStartOf="@+id/emailID"
        android:layout_toLeftOf="@+id/emailID"
        android:text=" Email-ID:"
        android:textColor="@color/black"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="187dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button3"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="66dp"
        android:layout_toStartOf="@+id/phonenumber"
        android:layout_toLeftOf="@+id/phonenumber"
        android:text=" Phone Number:"
        android:textColor="@color/black"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/phonenumber"
        android:layout_width="216dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button4"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="60dp"
        android:ems="10"
        android:inputType="phone"
        android:text=""
        android:textSize="22sp"
        />

    <EditText
        android:id="@+id/emailID"
        android:layout_width="238dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/phonenumber"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginBottom="19dp"
        android:ems="10"
        android:inputType=""
        android:text=""
        android:textSize="22sp"/>

    <EditText
        android:id="@+id/confirmpassword"
        android:layout_width="182dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/emailID"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="29dp"
        android:ems="10"
        android:inputType="textVisiblePassword"
        android:text=""
        android:textSize="22sp" />

    <EditText
        android:id="@+id/password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/confirmpassword"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginBottom="34dp"
        android:ems="10"
        android:inputType="textPassword"
        android:text=""
        android:textSize="22sp"/>

    <EditText
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/password"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="11dp"
        android:layout_marginRight="11dp"
        android:layout_marginBottom="32dp"
        android:ems="10"
        android:inputType=""
        android:text=""
        android:textSize="22sp"/>

    <Button
        android:id="@+id/button3"
        android:layout_width="153dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="83dp"
        android:layout_marginRight="83dp"
        android:layout_marginBottom="110dp"
        android:layout_toStartOf="@+id/button4"
        android:layout_toLeftOf="@+id/button4"
        android:backgroundTint="#000000"
        android:onClick="sign"
        android:text="SIGNUP"
        android:textSize="26sp"
        android:background="@drawable/button_rounded"
        />

    <Button
        android:id="@+id/button4"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="11dp"
        android:layout_marginRight="11dp"
        android:layout_marginBottom="109dp"
        android:backgroundTint="#000000"
        android:text="RESET"
        android:textSize="26sp"
        android:background="@drawable/button_rounded"/>

</RelativeLayout>